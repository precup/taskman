{
  "name": "Taskman",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "An extension to keep track of tasks",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
		"scripts": ["js/background.js"],
		"persistent": false
	},
	"permissions": [
		"tabs",
		"storage"
	],
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo"
  }
}